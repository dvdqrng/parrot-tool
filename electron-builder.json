{
  "appId": "app.parrot.desktop",
  "productName": "Parrot",
  "copyright": "Copyright Â© 2025",
  "directories": {
    "output": "dist",
    "buildResources": "build"
  },
  "files": [
    "electron.js",
    "preload.js",
    "server.js",
    ".next/standalone/**/*",
    "package.json",
    "!node_modules"
  ],
  "asar": false,
  "extraMetadata": {
    "main": "electron.js"
  },
  "mac": {
    "category": "public.app-category.productivity",
    "target": [
      {
        "target": "dmg",
        "arch": [
          "x64",
          "arm64"
        ]
      },
      {
        "target": "zip",
        "arch": [
          "x64",
          "arm64"
        ]
      }
    ],
    "icon": "build/icon.icns",
    "hardenedRuntime": true,
    "gatekeeperAssess": false,
    "entitlements": "build/entitlements.mac.plist",
    "entitlementsInherit": "build/entitlements.mac.plist"
  },
  "dmg": {
    "title": "Parrot Installer",
    "icon": "build/icon.icns",
    "background": null,
    "contents": [
      {
        "x": 130,
        "y": 220
      },
      {
        "x": 410,
        "y": 220,
        "type": "link",
        "path": "/Applications"
      }
    ]
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": [
          "x64",
          "arm64"
        ]
      },
      {
        "target": "portable",
        "arch": [
          "x64"
        ]
      }
    ],
    "icon": "build/icon.ico"
  },
  "nsis": {
    "oneClick": false,
    "perMachine": false,
    "allowToChangeInstallationDirectory": true,
    "deleteAppDataOnUninstall": false,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true
  },
  "linux": {
    "target": [
      {
        "target": "AppImage",
        "arch": [
          "x64",
          "arm64"
        ]
      },
      {
        "target": "deb",
        "arch": [
          "x64",
          "arm64"
        ]
      },
      {
        "target": "rpm",
        "arch": [
          "x64"
        ]
      }
    ],
    "icon": "build/icon.png",
    "category": "Office",
    "maintainer": "your-email@example.com"
  },
  "appImage": {
    "license": null
  }
}
